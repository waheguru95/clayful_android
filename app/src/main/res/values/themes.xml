<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Clayful" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_bg_color</item>
        <item name="colorPrimaryVariant">@color/app_bg_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_bg</item>
        <item name="colorSecondaryVariant">@color/app_bg_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_color</item>
        <!-- Customize your theme here. -->

        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@null</item>

    </style>

    <!-- Splash Screen Theme (API >= 31) -->
    <style name="Theme.App.Starting" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- The splash screen background, animated icon, and animation duration -->
        <item name="windowSplashScreenBackground">@color/app_bg_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.Clayful</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:layout_width">@dimen/_200sdp</item>
        <item name="android:layout_height">@dimen/_55sdp</item>
        <item name="fontFamily">@font/mulish_extra_bold</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/_50sdp</item>
    </style>

    <style name="LoginButtonStyleTablet">
        <item name="android:layout_width">@dimen/_120sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="fontFamily">@font/mulish_extra_bold</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_7sdp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/_50sdp</item>
    </style>

    <style name="LoginButtonStyleTabletLand">
        <item name="android:layout_width">@dimen/_150sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="fontFamily">@font/mulish_extra_bold</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/_50sdp</item>
    </style>


    <style name="LogoutCancelButtonStyle">
        <item name="android:layout_width">@dimen/_200sdp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="fontFamily">@font/mulish_extra_bold</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/app_bg_color</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/_50sdp</item>
    </style>

    <style name="LogoutCancelButtonStyleTablet">
        <item name="android:layout_width">@dimen/_120sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="fontFamily">@font/mulish_extra_bold</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/app_bg_color</item>
        <item name="android:textSize">@dimen/_7sdp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/_50sdp</item>
    </style>

    <style name="AppNameTextStyle">
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/button_bg</item>
        <item name="android:textSize">@dimen/_28sdp</item>
    </style>

    <style name="AppNameTextStyleTablet">
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/button_bg</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="TextFieldStyle">
        <item name="android:fontFamily">@font/mulish_semi_bold</item>
        <item name="android:textColor">@color/app_bg_color</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="TextFieldStyleTablet">
        <item name="android:fontFamily">@font/mulish_semi_bold</item>
        <item name="android:textColor">@color/app_bg_color</item>
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>


    <style name="ErrorFieldStyle">
        <item name="android:fontFamily">@font/mulish_semi_bold</item>
        <item name="android:textColor">@color/error_field_color</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="ErrorFieldStyleTablet">
        <item name="android:fontFamily">@font/mulish_semi_bold</item>
        <item name="android:textColor">@color/error_field_color</item>
        <item name="android:textSize">@dimen/_7sdp</item>
    </style>

    <style name="ResetTextStyle">
        <item name="android:fontFamily">@font/mulish_semi_bold</item>
        <item name="android:textColor">@color/app_bg_color</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="ResetTextStyleTablet">
        <item name="android:fontFamily">@font/mulish_semi_bold</item>
        <item name="android:textColor">@color/app_bg_color</item>
        <item name="android:textSize">@dimen/_7sdp</item>
    </style>

    <style name="ForgotPasswordTextStyle">
        <item name="android:fontFamily">@font/mulish_semi_bold</item>
        <item name="android:textColor">@color/forgot_pass_txt_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="ForgotPasswordTextStyleTablet">
        <item name="android:fontFamily">@font/mulish_semi_bold</item>
        <item name="android:textColor">@color/forgot_pass_txt_color</item>
        <item name="android:textSize">@dimen/_6sdp</item>
    </style>


    <style name="AppEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:minHeight">@dimen/_45sdp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:textColor">@color/app_bg_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/mulish_semi_bold</item>
    </style>

    <style name="AppEditTextStyleTablet" parent="@android:style/Widget.EditText">
        <item name="android:minHeight">@dimen/_27sdp</item>
        <item name="android:layout_height">@dimen/_27sdp</item>
        <item name="android:textColor">@color/app_bg_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/mulish_semi_bold</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ThemeWithCorners" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/logout_dialog_bg</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>

    </style>

    <style name="ThemeWithCornersTablet" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/logout_dialog_bg</item>
        <item name="android:windowMinWidthMajor">@dimen/_10sdp</item>
        <item name="android:windowMinWidthMinor">@dimen/_10sdp</item>
    </style>

    <style name="ResetPasswordStepStyle">
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/heading_bold_text_color</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="ResetPasswordHeadingStyle">
        <item name="android:fontFamily">@font/mulish_extra_bold</item>
        <item name="android:textColor">@color/heading_bold_text_color</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResetPasswordHintTextStyle">
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/heading_bold_text_color</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="LoaderTransparentDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">75</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="DialogTheme" parent="Theme.Clayful">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/home_view_bg</item>
    </style>

    <style name="LeftGuideLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintGuide_percent">0.15</item>
    </style>

    <style name="RightGuideLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintGuide_percent">0.85</item>
    </style>
</resources>